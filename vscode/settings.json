{
  // General settings
  "window.zoomLevel": 2,
  "workbench.startupEditor": "newUntitledFile",
  "editor.fontFamily": "Source Code Pro",
  "editor.renderWhitespace": "all",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Bimbo Theme",
  "workbench.editor.enablePreview": false,
  "window.nativeTabs": true,

  // Custom file associations
  "files.associations": {
    "*.bats": "shellscript",
    "*.erb": "markdown"
  },

  // golang settings
  "[go]": {
    "editor.tabSize": 4
  },
  "go.autocompleteUnimportedPackages": false,
  "go.useLanguageServer": false,
  "go.lintTool": "gometalinter",
  "go.lintFlags": [
    "--disable-all",
    "--exclude='error return value not checked.*(Close|Log|Print).*\\(errcheck\\)$'",
    "--exclude='.*_test\\.go:.*error return value not checked.*\\(errcheck\\)$'",
    "--exclude='duplicate of.*_test.go.*\\(dupl\\)$'",
    "--cyclo-over=20",
    "--tests",
    "--deadline=20s"
  ],
  "go.coverOnTestPackage": false,
  "go.testFlags": ["-v", "-race", "-p=1"],
  "go.editorContextMenuCommands": {
      "toggleTestFile": true,
      "addTags": true,
      "removeTags": false,
      "testAtCursor": true,
      "testFile": false,
      "testPackage": false,
      "generateTestForFunction": true,
      "generateTestForFile": false,
      "generateTestForPackage": false,
      "addImport": true,
      "testCoverage": true
  },

  // cloudformation settings
  "indenticator.inner.showHighlight": true,
  // https://github.com/redhat-developer/yaml-language-server/issues/77
  "yaml.validate": false,

  // shellscript settings
  "shellformat.path": "/Users/lachlan/go/bin/shfmt",

  // docker settings
  "docker.showExplorer": false,

  // ruby settings
  "ruby.useBundler": true,
  "ruby.intellisense": "rubyLocate",
  "ruby.lintDebounceTime": 300,
  "ruby.lint": {
    "ruby": {
      "unicode": true //Runs ruby -wc -Ku
    },
    "rubocop": {
      "lint": true,
      "rails": true
    },
  }
}
